{
  "name": "osgt-playwright-automation",
  "version": "1.0.0",
  "description": "Test Automation Framework",
  "main": "dist/index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:api": "playwright test src/tests/api",
    "test:ui-only": "playwright test src/tests/ui",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage test-results allure-results",
    "pretest": "npm run build",
    "docs": "typedoc src --out docs",
    "docker:build": "docker build -t tr-onesource-automation .",
    "docker:run": "docker-compose up --build",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:serve": "allure serve allure-results",
    "seed:data": "ts-node src/scripts/seedTestData.ts",
    "cleanup:data": "ts-node src/scripts/cleanupTestData.ts",
    "test:saucedemo": "playwright test --config=playwright.saucedemo.config.ts",
    "test:saucedemo:ui": "playwright test --config=playwright.saucedemo.config.ts --ui",
    "test:saucedemo:headed": "playwright test --config=playwright.saucedemo.config.ts --headed",
    "test:saucedemo:chromium": "playwright test --config=playwright.saucedemo.config.ts --project=chromium-saucedemo",
    "test:saucedemo:report": "playwright show-report playwright-report-saucedemo"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.40.0",
    "allure-playwright": "^2.9.2",
    "aws-sdk": "^2.1489.0",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "mssql": "^10.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.14",
    "ts-node": "^10.9.1",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.1",
    "@types/mssql": "^9.1.7",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.15.4",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "test-automation",
    "playwright",
    "typescript",
    "pom",
    "enterprise",
    "thompson-reuters",
    "onesource"
  ],
  "author": "Ronald Alversado",
  "license": "ISC"
}
