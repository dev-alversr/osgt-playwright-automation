# ============================================================================
# Test Automation Framework
# Environment Variables Template
# ============================================================================

# Test Environment Configuration
TEST_ENV=dev
NODE_ENV=test

# Application URLs
BASE_URL=https://dev.onesource.thomsonreuters.com
API_BASE_URL=https://api-dev.onesource.thomsonreuters.com

# Database Configuration - MSSQL
DB_SERVER=dev-sql-server.database.windows.net
DB_NAME=onesource_dev
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Database Configuration - PostgreSQL
PG_HOST=dev-pg-server.postgres.database.azure.com
PG_PORT=5432
PG_DATABASE=onesource_dev
PG_USERNAME=your_pg_username
PG_PASSWORD=your_pg_password

# Database Configuration - DynamoDB
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
DYNAMODB_ENDPOINT=https://dynamodb.us-east-1.amazonaws.com

# Authentication & Security
API_TOKEN=your_api_token_here
ENCRYPTION_KEY=your-secret-encryption-key-here
JWT_SECRET=your-jwt-secret-key

# Test User Credentials
TEST_ADMIN_USERNAME=admin
TEST_ADMIN_PASSWORD=admin_password
TEST_USER_USERNAME=testuser
TEST_USER_PASSWORD=test_password

# Browser Configuration
BROWSER=chromium
HEADLESS=true
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Performance Monitoring
PERFORMANCE_MONITORING=true
PAGE_LOAD_THRESHOLD=5000
MEMORY_THRESHOLD=100000000
NETWORK_THRESHOLD=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=simple
LOG_FILE=logs/test.log

# Media Capture
SCREENSHOT_MODE=only-on-failure
VIDEO_MODE=retain-on-failure
FULL_PAGE_SCREENSHOTS=true

# Test Execution
TIMEOUT=30000
RETRIES=2
PARALLEL_WORKERS=1
TEST_TIMEOUT=60000

# CI/CD Configuration
CI=false
BUILD_NUMBER=local
BUILD_URL=http://localhost

# Reporting
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report
TEST_RESULTS_DIR=test-results

# External Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook-url
EMAIL_SMTP_HOST=smtp.office365.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@company.com
EMAIL_PASSWORD=your_email_password

# Monitoring & Alerting
MONITORING_ENABLED=true
HEALTH_CHECK_URL=https://api-dev.onesource.thomsonreuters.com/health
METRICS_ENDPOINT=https://monitoring.company.com/metrics
ALERT_ENDPOINT=https://monitoring.company.com/alerts

# File Storage
UPLOAD_DIR=uploads
DOWNLOAD_DIR=downloads
TEMP_DIR=temp

# Data Generation
FAKER_LOCALE=en_US
FAKER_SEED=12345

# API Configuration
API_TIMEOUT=30000
API_RETRIES=3
API_RATE_LIMIT=100

# Security Configuration
ENABLE_SSL_VERIFICATION=true
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key

# Development & Debug
DEBUG=false
VERBOSE=false
DRY_RUN=false

# Feature Flags
ENABLE_API_MOCKING=false
ENABLE_PERFORMANCE_TESTING=true
ENABLE_VISUAL_TESTING=false
ENABLE_ACCESSIBILITY_TESTING=false

# Test Data Configuration
SEED_TEST_DATA=true
CLEANUP_TEST_DATA=true
USE_REAL_DATA=false

# Parallel Execution
MAX_PARALLEL_TESTS=5
TEST_ISOLATION=true
SHARED_STATE=false